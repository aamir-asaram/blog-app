<h1 class="text-3xl font-bold w-1/2 text-center">New post</h1>
<br>
<%= form_with model: post, url: new_user_post_path, method: :post, local: true, scope: :post do |f| %>
  <div class="flex flex-col w-1/2 justify-center">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
    <%= f.label :text, "Text" %>
    <%= f.text_area :text %>
    <%= f.submit "Create post" %>
  </div>
<% end %>